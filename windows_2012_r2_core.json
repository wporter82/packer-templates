{
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": "{{user `headless`}}",
      
      "boot_wait": "2m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "12h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "1h",
      "guest_os_type": "Windows2012_64",
      "disk_size": "{{user `disk_size`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/windows/microsoft-updates.bat",
        "./scripts/windows/win-updates.ps1",
        "./scripts/windows/openssh.ps1",
        "./scripts/windows/oracle-cert.cer"
      ],
      "vboxmanage": [
        ["modifyvm","{{.Name}}","--memory","{{user `memory`}}"],
        ["modifyvm","{{.Name}}","--cpus","{{user `cpus`}}"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
        "./scripts/windows/vm-guest-tools.bat",
        "./scripts/windows/vagrant-ssh.bat",
        "./scripts/windows/disable-auto-logon.bat",
        "./scripts/windows/enable-rdp.bat",
        "./scripts/windows/compile-dotnet-assemblies.bat"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "file",
      "pause_before": "5m",
      "source": "./SQLEXPR_x64_ENU.exe",
      "destination": "SQLEXPR_x64_ENU.exe"
    },
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "inline": ["C:\\Users\\vagrant\\SQLEXPR_x64_ENU.exe /Q /ACTION=INSTALL /INDICATEPROGRESS /IACCEPTSQLSERVERLICENSETERMS /FEATURES=\"SQLEngine,Conn\" /TCPENABLED=1 /SECURITYMODE=SQL /SAPWD=\"vagrant!@3\" /UPDATEENABLED=1 /ERRORREPORTING=0 /SQLSYSADMINACCOUNTS=vagrant /INSTANCENAME=\"SQLServer\""]
    },
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
        "./scripts/windows/postinstallmssql.bat"
        ]
    },
    {
      "type": "shell",
      "pause_before": "5m",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
        "./scripts/windows/compact.bat"
        ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "compression_level": "{{user `compression_level`}}",
      "output": "windows_2012_r2_core.box",
      "vagrantfile_template": "vagrantfile_templates/vagrantfile-windows_2012_r2.rb"
    }
  ],
  "variables": {
    "iso_url": "http://download.microsoft.com/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
    "iso_checksum_type": "md5",
    "iso_checksum": "458ff91f8abc21b75cb544744bf92e6a",
    "autounattend": "./answer_files/Autounattend.xml",
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "61440",
    "headless": "true",
    "memory": "1024"
  }
}
